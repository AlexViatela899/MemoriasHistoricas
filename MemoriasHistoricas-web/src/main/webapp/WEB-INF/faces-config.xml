<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginExito</from-outcome>
            <to-view-id>/secure/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cambiarClave</from-outcome>
            <to-view-id>/login/cambioClave.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registrarse</from-outcome>
            <to-view-id>/registro/registroUsuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>mapa</from-outcome>
            <to-view-id>/secure/memoriashistoricas/mapa.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
                <from-outcome>registro</from-outcome>
            <to-view-id>/registro/registroUsuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>menuMemoriasHistoricasBean</managed-bean-name>
        <managed-bean-class>co.edu.poligran.memoriashistoricas.web.beans.menu.MenuMemoriasHistoricasBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>co.edu.poligran.memoriashistoricas.web.beans.sesion.LoginBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>registroUsuarioBean</managed-bean-name>
        <managed-bean-class>co.edu.poligran.memoriashistoricas.web.beans.registro.RegistroUsuarioBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
