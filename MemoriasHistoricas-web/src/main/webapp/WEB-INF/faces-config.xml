<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginExito</from-outcome>
            <to-view-id>/secure/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cambiarClave</from-outcome>
            <to-view-id>/login/cambioClave.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registrarse</from-outcome>
            <to-view-id>/registro/registroUsuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>mapa</from-outcome>
            <to-view-id>/secure/memoriashistoricas/mapa.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
